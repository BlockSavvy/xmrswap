{
  "name": "xmrswap",
  "version": "1.0.0",
  "description": "Anonymous Monero atomic swap mobile app",
  "author": "XMR Swap Team",
  "license": "MIT",
  "keywords": [
    "monero",
    "bitcoin",
    "cryptocurrency",
    "atomic-swap",
    "privacy",
    "mobile"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/xmrswap.git"
  },
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:development": "eas build --profile development",
    "build:preview": "eas build --profile preview",
    "build:production": "eas build --profile production",
    "build:all": "eas build --platform all --profile production",
    "submit:ios": "eas submit --platform ios --profile production",
    "submit:android": "eas submit --platform android --profile production",
    "test": "jest",
    "deploy:all": "chmod +x deployment/*.sh && ./deployment/deploy-all.sh",
    "deploy:tor": "npx expo export --platform web && echo 'Upload dist/ to your Privex VPS and run deployment scripts'",
    "deploy:haveno": "echo 'Run deployment/haveno-setup.sh on your VPS for DEX integration'",
    "deploy:vercel": "npx expo export --platform web && vercel --prod",
    "deploy:repo": "chmod +x deployment/setup-repo.sh && ./deployment/setup-repo.sh",
    "test:watch": "jest --watch",
    "lint": "expo lint",
    "typecheck": "tsc --noEmit",
    "prebuild": "expo install --fix"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^7.1.8",
    "@react-navigation/stack": "^7.6.14",
    "@walletconnect/utils": "^2.23.3",
    "@walletconnect/web3wallet": "^1.16.1",
    "bitcoinjs-lib": "^7.0.1",
    "ethers": "^6.16.0",
    "expo": "~54.0.31",
    "expo-linking": "^8.0.11",
    "expo-localization": "^17.0.8",
    "expo-router": "^6.0.21",
    "expo-secure-store": "^15.0.8",
    "expo-status-bar": "~3.0.9",
    "expo-updates": "^29.0.16",
    "haveno-ts": "^0.0.39",
    "https-proxy-agent": "^7.0.6",
    "nativewind": "^4.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "0.81.5",
    "react-native-paper": "^5.14.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.2",
    "socks-proxy-agent": "^8.0.5",
    "tailwindcss": "^3.4.19",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.5",
    "@types/react": "~19.1.0",
    "babel-preset-expo": "^54.0.9",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.16",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/assets/**"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg))"
    ]
  },
  "private": true
}
